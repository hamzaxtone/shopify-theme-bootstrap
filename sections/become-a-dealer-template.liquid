{% capture max_width %}
    {% unless section.settings.max_width == blank %}
        {{ section.settings.max_width | prepend: 'max-width: ' | append: 'px;' }}
    {% endunless %}
{% endcapture %}

<article class="">

    <div 
        class="container mx-auto"
        style="{{ max_width }}">

        <!-- Header -->
        <div class="heading-wrapper mb-0 overflow-hidden text-center">

            <!-- Heading -->
            <h3 class="heading {{ section.settings.heading_size }}">
                {{ page.title }}
            </h3>
          <p>Heritage Wheel is always looking for partnership opportunities with automotive retailers that 
we feel will be exemplary representatives of our brand.</p>	
        </div>

        

        <!-- Contact form -->
        {% form 'contact', class: 'contact-form mb-8' %}

            <!-- Form success -->
            {% if form.posted_successfully? %}
                <p class="form-success alert alert-success mb-4" role="alert">
                    {{ 'general.contact.post_success' | t }}
                </p>
            {% endif %}

            <!-- Form errors -->
            {{ form.errors | default_errors }}

            <!-- Form fields -->
            <div class="row g-3 mb-3">
                <div class="form-group col-md-6">
                    <input 
                        class="form-control" 
                        type="text" 
                        name="contact[first_name]" 
                        id="ContactFormfirst_name" 
                        value=""  
                        placeholder="First Name" 
                        required>
                </div>
                <div class="form-group col-md-6">
                      <input 
                          class="form-control" 
                          type="text" 
                          name="contact[last_name]" 
                          id="ContactFormlast_name" 
                          value=""  
                          placeholder="Last Name" 
                          required>
                  </div>
                  <div class="form-group col-md-6">
                    <input 
                           class="form-control" 
                           type="text" 
                           name="contact[company_name]" 
                           id="ContactFormcompany_name" 
                           value=""  
                           placeholder="Company Name" 
                           required>
                  </div>

                <div class="form-group col-md-6">
                    <input 
                        class="form-control" 
                        type="email" 
                        name="contact[email]" 
                        id="ContactFormEmail" 
                        value="" 
                        placeholder="Email Address" 
                        spellcheck="false" 
                        autocomplete="off" 
                        autocapitalize="off" 
                        required>
                </div>
              <div class="form-group col-md-6">
                <label class="input-file">
                  Upload Picture of Storefront <i class="fa fa-plus"></i>
                	<input 
                           type="file" 
                           name="contact[file]" 
                           id="ContactFormFile_name" 
                           >
                </label>
                  </div>
              <div class="form-group col-md-6">
                    <input 
                        class="form-control" 
                        type="text" 
                        name="contact[website_link]" 
                        id="ContactForm_website_link" 
                        value=""  
                        placeholder="Website Link" 
                        required>
                </div>
<div class="form-group col-md-12">
                    <input 
                        class="form-control" 
                        type="text" 
                        name="contact[subject]" 
                        id="ContactForm_subject" 
                        value=""  
                        placeholder="Subject" 
                        required>
                </div>
              <div class="form-group col-md-12">
                <textarea 
                    class="form-control" 
                    rows="3" 
                    name="contact[body]" 
                    id="ContactFormMessage" 
                    placeholder="Message" 
                    required>
                    {%- if form.body -%}
                        {{- form.body -}}
                    {%- endif -%}
                </textarea>
            </div>
              <div class="form-group col-md-12 mb-5">
                <label class="form-heading">Brick and mortar store?</label>
                <label> 
                	<input 
                        class="" 
                        type="radio" 
                        name="contact[Brick_Mortar_Store]" 
                        id="ContactForm_yes" 
                        value="Yes"   > Yes
                </label>
                <label> 
                	<input 
                        class="" 
                        type="radio" 
                        name="contact[Brick_Mortar_Store]" 
                        id="ContactForm_no" 
                        value="No"   > No
                </label>
                    
                </div>
              
              
              
<!--                 <div class="form-group col-md-6">
                    <input 
                        class="form-control" 
                        type="tel" 
                        name="contact[phone]" 
                        id="ContactFormPhone" 
                        value="{{ customer.phone }}" 
                        placeholder="{{ 'general.contact.phone' | t }}" 
                        aria-label="{{ 'general.contact.phone' | t }}" 
                        pattern="[0-9\-]*">
                </div> -->
            </div>

            <!-- Textarea -->
            

            <!-- Submit btn -->
            <input 
                type="submit" 
                class="btn btn-primary" 
                value="Submit Now">
        {% endform %}

    </div>
</article>

{% schema %}
{
    "name": "Become a Dealer - page",
    "settings": [
        {
            "type": "header",
            "content": "General settings"
        },
        {
            "type": "text",
            "id": "max_width",
            "label": "Content max-width (px)",
            "info": "Adjust post content width (in pixels). Leave empty to use the container.",
            "default": "768"
        },
        {
            "type": "select",
            "id": "heading_size",
            "label": "Heading size",
            "default": "display-5",
            "options": [
                { "group": "Display", "value": "display-1", "label": "Display 1" },
                { "group": "Display", "value": "display-2", "label": "Display 2" },
                { "group": "Display", "value": "display-3", "label": "Display 3" },
                { "group": "Display", "value": "display-4", "label": "Display 4" },
                { "group": "Display", "value": "display-5", "label": "Display 5" },
                { "group": "Display",  "value": "display-6", "label": "Display 6" },
                { "group": "Heading", "value": "h1", "label": "H1" },
                { "group": "Heading", "value": "h2", "label": "H2" },
                { "group": "Heading", "value": "h3", "label": "H3" },
                { "group": "Heading", "value": "h4", "label": "H4" },
                { "group": "Heading", "value": "h5", "label": "H5" },
                { "group": "Heading", "value": "h6", "label": "H6" }
            ]
        }
    ]
}
{% endschema %}