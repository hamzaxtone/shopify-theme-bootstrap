body,h1,h2,h3,h4,h5,h6,p,a,button,input{
  font-family: 'Open Sans';
}
p{
	font-size:16px;
}
ul#navbar-nav li a {
    font-size: 14px;
    text-transform: uppercase;
    color: #fff;
    font-family: 'Open Sans';
    font-weight: bold;
}
ul#navbar-icons-nav li a {
    color: #fff;
}
.carousel .carousel-caption {
    top: 18%;
    bottom: unset;
}
.carousel .carousel-caption h3 {
    font-size: 105px;
    font-family: 'Open Sans';
    font-weight: bold;
    line-height: 115px;
  text-transform: uppercase;
}
.carousel .carousel-caption p {
    font-size: 20px;
    line-height: 20px;
    font-weight: 400;
    font-family: 'Open Sans';
}
.carousel .carousel-caption .btn {
   	font-size: 16px;
    line-height: 28px;
    font-weight: 700;
    font-family: 'Open Sans';
    padding: 13px 15px;
    border: 1px solid #fff;
    color: #fff;
    min-width: 220px;
    border-radius: 5px;
}
.carousel-control-prev, .carousel-control-next {
    opacity: 1;
    border: 1px solid #fff;
    height: 50px;
    width: 50px;
    background: #DBDBDB;
    border-radius: 50%;
    bottom: unset;
    top: 45%;
}

.carousel-control-prev {
    left: 50px;
}

.carousel-control-next {
    right: 50px;
}
.txt-icon-desc .heading {
    font-size: 20px;
    font-weight: bold;
    line-height: 25px;
}

.txt-icon-desc p {
    font-size: 16px;
    line-height: 24px;
}
.slider-product ul .product-item .product-item-title {
    margin-top: -40px;
    padding-bottom: 2px;
    display: block;
    color: #000;
    text-align: left;
    line-height: 24px;
    padding-left: 10px;
    font-size: 20px;
    font-weight: bold;
    }
.slider-product ul .product-item .product-item-description {
    font-size: 16px;
    line-height: 24px;
    font-family: 'Open Sans';
    text-align: left;
    padding-left: 10px;
}
.slider-product ul .product-item .product-item-price .price {
    color: #000;
    text-align: left;
    display: block;
    padding-left: 10px;
    font-size: 20px;
    line-height: 24px;
    font-weight: bold;
}
.shopify-section section.bg-light {
    background-color: #E9E9E9 !important;
}

.shopify-section .heading-wrapper {
    margin-bottom: 30px !important;
}
.footer-blocks-grid .footer-blocks-grid-item .h5 {
    font-size: 20px;
    font-weight: bold;
    line-height: 24px;
    margin-bottom: 30px;
    position: relative;
    display: inline-block;
}

.footer-blocks-grid .footer-blocks-grid-item .footer-menu ul li a {
    padding-left: 0px;
    font-size: 15px;
    line-height: 24px;
}

.footer-blocks-grid .footer-blocks-grid-item .h5:after {
    position: relative;
    content: '';
    background: #fff;
    width: 70%;
    left: 0;
    display: block;
    height: 2px;
    top: 3px;
}