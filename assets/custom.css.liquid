color:#fff;
} */
ul#navbar-nav li a {
    font-size: 14px;
    text-transform: uppercase;
    color: #fff;
    font-family: 'Open Sans';
    font-weight: bold;
}
/* .template-index ul#navbar-icons-nav li a {
    color: #fff;
} */
ul#navbar-icons-nav li a {
    color: #fff;
}
.carousel .carousel-caption {
    top: 18%;
    bottom: unset;
}
.carousel .carousel-caption h3 {
    font-size: 105px;
    font-family: 'Open Sans';
    font-weight: bold;
    line-height: 115px;
  text-transform: uppercase;
}
.carousel .carousel-caption p {
    font-size: 20px;
    line-height: 20px;
    font-weight: 400;
    font-family: 'Open Sans';
}
.carousel .carousel-caption .btn {
   	font-size: 16px;
    line-height: 28px;
    font-weight: 700;
    font-family: 'Open Sans';
    padding: 13px 15px;
    border: 1px solid #fff;
    color: #fff;
    min-width: 220px;
    border-radius: 5px;
}
.carousel-control-prev, .carousel-control-next {
    opacity: 1;
    border: 1px solid #fff;
    height: 50px;
    width: 50px;
    background: #DBDBDB;
    border-radius: 50%;
    bottom: unset;
    top: 45%;
}

.carousel-control-prev {
    left: 50px;
}

.carousel-control-next {
    right: 50px;
}
.txt-icon-desc .heading {
    font-size: 20px;
    font-weight: bold;
    line-height: 25px;
}

.txt-icon-desc p {
    font-size: 16px;
    line-height: 24px;
}
.slider-product ul .product-item .product-item-title {
    margin-top: -40px;
    padding-bottom: 2px;
    display: block;
    color: #000;
    text-align: left;
    line-height: 24px;
    padding-left: 10px;
    font-size: 20px;
    font-weight: bold;
    }
.slider-product ul .product-item .product-item-description {
    font-size: 16px;
    line-height: 24px;
    font-family: 'Open Sans';
    text-align: left;
    padding-left: 10px;
}
.slider-product ul .product-item .product-item-price .price {
    color: #000;
    text-align: left;
    display: block;
    padding-left: 10px;
    font-size: 20px;
    line-height: 24px;
    font-weight: bold;
}
.shopify-section section.bg-light {
    background-color: #E9E9E9 !important;
}

.shopify-section .heading-wrapper {
    margin-bottom: 30px !important;
}
.footer-blocks-grid .footer-blocks-grid-item .h5 {
    font-size: 20px;
    font-weight: bold;
    line-height: 24px;
    margin-bottom: 30px;
    position: relative;
    display: inline-block;
}

.footer-blocks-grid .footer-blocks-grid-item .footer-menu ul li a {
    padding-left: 0px;
    font-size: 15px;
    line-height: 24px;
}

.footer-blocks-grid .footer-blocks-grid-item .h5:after {
    position: relative;
    content: '';
    background: #fff;
    width: 70%;
    left: 0;
    display: block;
    height: 2px;
    top: 3px;
}
.footer-blocks-grid .footer-blocks-grid-item p {
    font-size: 14px;
    margin-bottom: 0px;
}
.footer-blocks-grid .footer-blocks-grid-item .footer-menu ul li a i {
    color: #fff;
    background: #111116;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 20px;
}
#footer-blocks-bottom hr{
	margin-bottom:60px;
}
li.footer-blocks-grid-item.Newsletter {
    width: 50%;
}
li.footer-blocks-grid-item.Newsletter h3 {
    font-size: 20px;
    line-height: 24px;
    font-weight: bold;
    margin-bottom: 34px;
}
li.footer-blocks-grid-item.Newsletter button {
    border-radius: 0px;
    background: #919191;
    font-size: 14px;
    line-height: 28px;
    font-weight: bold;
    margin-left: 0px !important;
    color: #22222A;
  	text-transform:uppercase;
}

li.footer-blocks-grid-item.Newsletter input.form-control {
    border-radius: 0px;
    border: 1px solid #fff;
    background-color: transparent;
    color: #fff;
    width: 90% !important;
    height: 51px;
    border-right: 0px;
  	font-size:15px;
}

li.footer-blocks-grid-item.Newsletter input.form-control::placeholder {
    color:#fff;
}
ul.blog-posts-grid ul.blog-posts-grid-item {}

ul.blog-posts-grid .blog-posts-grid-item h3 a {
    font-size: 20px;
    line-height: 24px;
    font-weight: bold;
    color: #000;
    text-decoration: none;
    margin-top: 25px;
    display: block;
}

ul.blog-posts-grid .blog-posts-grid-item .article-excerpt {
    font-size: 16px;
    line-height: 24px;
}
ul.blog-posts-grid .blog-posts-grid-item a.article-readmore-btn {
    font-size: 16px;
    color: #000;
    line-height: 28px;
    font-weight: bold;
    text-transform: uppercase;
    text-decoration: none;
    padding: 0px;
}

ul.blog-posts-grid .blog-posts-grid-item .article-meta time {
    color: #22222A;
    font-size: 16px;
    line-height: 24px;
}
.no-spacing-gallery .container-fluid {
    padding: 0px;
}

.no-spacing-gallery li.gallery-item {
    padding-left: 0px;
    padding-right: 0px;
}

.navbar-light .navbar-toggler {
    color: #fff;
    border-color: #fff;
}



