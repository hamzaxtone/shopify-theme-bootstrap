body,h1,h2,h3,h4,h5,h6,p,a,button,input{
  font-family: 'Open Sans';
}
p{
	font-size:16px;
}

body:not(.template-index) div#shopify-section-navbar {
  position: relative;
}
body:not(.template-index) header {
  background: #22222A;
}

header .breadcrumb {
    color: #fff;
    font-size: 20px;
    line-height: 24px;
    margin: 30px auto 50px;
    padding: 0 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-flow: wrap;
}

header .breadcrumb a {
    color: inherit;
}
/* 
